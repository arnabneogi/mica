/*
 *Create tmp folder
 * */
function _mica_studies_export_create_tmp_folder(&$context){

if(empty($context['results']['tmpfolder'])){
  $context['message'] = t('Preparing process.....');
  $tmp =  file_directory_temp();
  $tmppath = $tmp.'/export-'.time();
  drupal_mkdir($tmppath);
  $tmp ='export-'.time();
  $context['results']['tmpfolder'] = $tmppath;
  $context['results']['tmp'] = $tmp;
}
 // dpm($tmppath);
}

/*
 * Xml generation
 * */
function _mica_studies_export_gen_xml($nid, &$context) {
  $wrapper = entity_metadata_wrapper('node', $nid);
 // dpm($wrapper->type->value());
  $context['message'] = t('Processing Node "@title"', array('@title' => $wrapper->title->value()));
  // Xml files creation
  $doc = new DOMDocument('1.0', 'utf-8');
  $type = $doc->createElement($wrapper->type->value());
  $doc->appendChild($type);
  $title = $doc->createElement('title',$wrapper->title->value());
    $type->appendChild($title);
  $uuid = $doc->createElement('uuid',$wrapper->uuid->value());
  $type->appendChild($uuid);
  $myxml = $doc->saveXML();

  $tmp = $context['results']['tmp'];
  $tmppath = '/tmp/'.$tmp;

  if(is_dir($tmppath)){
    $myfile = file_save_data($myxml,'temporary://'.$tmp.'/export-'.$wrapper->type->value().'-'.$wrapper->nid->value().'.xml', FILE_EXISTS_REPLACE);
// Nous insérons le nouvel élément en tant que racine (enfant du document)
  }
  else {
    dpm('error');
  }
  //sand some parameteres to next bach
  $context['results']['tmpfolder']= $tmppath;
  $context['results']['tmp']=$tmp ;
}

/*
 * Creation zip file and move it to public
 * */
function _mica_studies_export_create_zip_file(&$context){

  $context['message'] = t('Compressing XML files');
  global $user;
  $tmppath =   $context['results']['tmpfolder'];
  $tmp = $context['results']['tmp'];
  // Archive Xml's files
  //if directory exist
  if(is_dir($tmppath)){
    //retrive files in directory to archove
   $scanned_directory = array_diff(scandir($tmppath), array('..', '.'));

   $filename = '/tmp/'.$tmp.'/'.$tmp.'.zip';
    //create directories in public folder if not exist
    if(!is_dir('public://'.'/export'))  drupal_mkdir('public://'.'/export');
    if(!is_dir('public://'.'/export/'.$user->name)) drupal_mkdir('public://'.'/export/'.$user->name);

    $filename = drupal_realpath('public://').'/export/'.$user->name.'/'.$tmp.'.zip';
    //Archive the files
  fopen($filename, 'w');
  $zip = new Archiverzip($filename);
  //dpm($scanned_directory);
  foreach( $scanned_directory as $file)
    {
      $zip->add($tmppath.'/'.$file);
    }
fclose($filename);

  }
//sand some parameteres to next bach
  $context['results']['tmpfolder']=$tmppath;
  $context['results']['tmp']=$tmp;
  $context['results']['username']=$user->name;

}

/*
 * Delete tmp Folder
 */
function _mica_studies_export_deletetmp(&$context){
  $tmppath =   $context['results']['tmpfolder'];
  $tmp = $context['results']['tmp'];
  $usename =$context['results']['username'];
  file_unmanaged_delete_recursive($tmppath);
  $filename = 'public://export/'.$usename.'/'.$tmp.'.zip';
  $urlf = file_create_url($filename);
  drupal_set_message(t("Your Exported Study file download : <a href='$urlf'>here</a> <br /> You can find this file in your <a href='?q=user/1/imce'>File manager</a> "), 'status');
}

function _mica_studies_export_find_nodes($study_nid) {
  $nids = array();
  $nids[] = $study_nid;

  $study_wrapper = entity_metadata_wrapper('node', $study_nid);
  foreach ($study_wrapper->field_study_populations->getIterator() as $pop_wrapper) {
    $nids[] = $pop_wrapper->nid->value();
    foreach ($pop_wrapper->field_pop_dce->getIterator() as $dce_wrapper) {
      $nids[] = $dce_wrapper->nid->value();
    }
  }
  foreach ($study_wrapper->field_investigators->getIterator() as $investigator_wrapper) {
    $nids[] = $investigator_wrapper->nid->value();
  }
  foreach ($study_wrapper->field_contacts_ref->getIterator() as $contact_wrapper) {
    $nids[] = $contact_wrapper->nid->value();
  }

//  $study_wrapper = entity_metadata_wrapper('node', $study->nid);

  return $nids;
}
