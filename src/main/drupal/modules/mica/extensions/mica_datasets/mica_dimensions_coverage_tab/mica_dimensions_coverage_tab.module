/**
 * Implements hook_block_view().
 */

function mica_dimensions_coverage_tab_block_view($delta) {

  switch ($delta) {
    case 'filter-dimention-coverage':
      $_SESSION['storage']['studies'] = isset($_GET['studies']) ? $_GET['studies'] : NULL;
      $_SESSION['storage']['dce'] = isset($_GET['dce']) ? $_GET['dce'] : NULL;
      $_SESSION['storage']['dataset'] = isset($_GET['dataset']) ? $_GET['dataset'] : NULL;
      $_SESSION['storage']['type'] = isset($_GET['type']) ? $_GET['type'] : NULL;
      $_SESSION['storage']['show-dce'] = isset($_GET['show-dce']) ? $_GET['show-dce'] : NULL;
      $content = drupal_get_form('mica_dimensions_coverage_tab_filter_form');
      $block = array(
        '#theme' => 'mica_subtheme',
        'subject' => t('Mica Domain Coverage table: '),
        'content' => $content,
      );
      return $block;

    case 'tab-dimention-coverage':
      if (isset($_REQUEST['type']) && $_REQUEST['type'] == 'harmonization') {
        $content = _mica_dimensions_coverage_tab_tabledata_display(isset($_GET['dataset']) ? $_GET['dataset'] : NULL);
      }
      else {
        if (isset($_GET['show-dce']) && $_GET['show-dce'] == 1) {
          $content = _mica_dimensions_coverage_tab_tabledata_display_dce(isset($_GET['dce']) ? $_GET['dce'] : NULL);
        }
        else {
          $content = _mica_dimensions_coverage_tab_tabledata_display_study(isset($_GET['studies']) ? $_GET['studies'] : NULL);
        }
      }
      $block = array(
        '#theme' => 'mica_subtheme',
        //  'subject' => t('Mica Domain Coverage table: '),
        'content' => array('#markup' => $content),
        'weight' => 49,
      );
      return $block;

  }
}

